.header{
  background: #feb70f;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.header .avatar{
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 50%;
  border: 2rpx solid #f33767;
}

.nickname{
  text-align: center;
}

.section{
  color: #2e2e2e;
  font-size:30rpx;
  padding: 0;
}

.section .line,.section .noarrorLine{
  margin-left: 30rpx;
  padding-right: 30rpx;
  line-height: 3;
  border-bottom: 1rpx solid #efefef;
}

.section .line:before{
  content:">";
  float:right;
  color: #aaa;
}



.section .line .tl,.section .noarrorLine .tl{
  float: right;
  color: #aaa;
}