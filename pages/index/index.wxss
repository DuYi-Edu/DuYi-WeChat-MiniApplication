/* pages/index/index.wxss */
.container{
  background: wheat;
}

.row{
  position: relative;
  height: 80rpx;
  width: 90%;
  border-radius: 10rpx;
  background: white;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box; 
  margin-top: 10rpx;
}

.area{
  width: 90%;
  height: 10vh;
  background: #fff;
  border-radius: 10rpx;
}

.row input{
  width: 100%;
  height: 100%;
}

.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  color: #bbb;
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
}

.subBtn{
  width: 200rpx;
  height: 80rpx;
  background: #fff;
  column-rule: #000;
  border-radius: 50rpx;
  line-height: 80rpx;
}