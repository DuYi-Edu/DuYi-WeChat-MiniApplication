/* pages/detail/detail.wxss */
page{
  background-color: RGBA(22,15,46,1)
}

.mywrap{
  position: fixed;
  top:100rpx;
  bottom:0;
  width: 100%;
  z-index: -1;
  background-color: RGBA(22,15,46,1);
}

.videoArr{
  width:100%;
  height:auto;
  box-sizing: border-box;
  padding:15rpx 30rpx 0 30rpx;
  overflow: hidden;
}

.pageScroll{
  box-sizing: border-box;
  padding-bottom: 222rpx;
}

.headTop{
  width:100%;
  height: 252rpx;
  background-size:100% 100%;
  position: relative;
  box-sizing: border-box;
  padding: 0 50rpx;
  font-weight: bold;
  overflow: hidden; 
}

.ph{
  width: 66rpx;
  height: 64rpx;
  position: absolute;
  top:0;
  left: 22rpx;
  background-size:38rpx;
  color: rgba(255,255,255,1);
  text-align: center;
  line-height: 45rpx; 
}

.headTopMain{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  overflow: hidden;
  font-size: 40rpx;
  color:  rgba(255,255,255,1);
}

.headBottom{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  position: absolute;
  bottom: 20rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  left: 0;
}

.nodata{
  height: 200rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: rgba(255,255,255,1);
}

.bottomGroup{
  width:100%;
  height: 222rpx;
  box-sizing: border-box;
  padding:0 30rpx;
  display:flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  z-index: 5;
  background-color: RGBA(22,15,46,1);
}

.bGitem{
  width:320rpx;
  height: 88rpx;
  border-radius: 45rpx;
  font-size:36rpx;
  color:rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 88rpx;
  background: linear-gradient(to right,RGBA(234,30,127,1),RGBA(169,106,249,1))
}